; include files

include-file = $HOME/.config/polybar/modules.ini
include-file = $HOME/.config/polybar/themes/{{ theme | default ("gruvbox") }}.ini


[global/wm]
margin-top = 5
margin-bottom = 5


[bar/main]
width = 100%
height = 30
offset-y = 0
fixed-center = true

wm-restack = {{ window_manager | default ("bspwm") }}

override-redirect = false

scroll-up = {{ window_manager | default ("bspwm") }}-desknext
scroll-down = {{ window_manager | default ("bspwm") }}-deskprev

enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

#overline-size = 2
#overline-color = ${color.ac}

modules-left = {{ window_manager | default ("bspwm") }} title
modules-center = date
modules-right = battery memory cpu

line-size = 3
line-color = #f00

border-size = 1
border-color = ${colors.background}

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 0

tray-position = right
tray-padding = 2

tray-background = ${colors.background}

include-file = $HOME/.config/polybar/fonts.ini

cursor-click = pointer
cursor-scroll = ns-resize


[settings]
screenchange-reload = true
